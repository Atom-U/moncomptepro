<div>
    <div class="fr-mb-2w">
        <h1 class="fr-h3">
            Sélectionner un parrain
        </h1>
        <div>
            <%- include('../partials/notifications.ejs', {notifications: notifications}) %>
            <p>
                Cette personne sera informée que vous rejoignez l’organisation <%= libelle %> sur MonComptePro.
            </p>
            <form id="form-join-organization" action="/users/choose-sponsor/<%= organization_id %>" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" autocomplete="off">

                <div class="fr-input-group">
                    <label class="fr-label" for="searchable-select">
                        Choisissez votre parrain
                    </label>
                    <select
                            id="searchable-select"
                            class="fr-select"
                            name="sponsor_id"
                            required
                    >
                        <% sponsorOptions.map(function({ id, label }) { %>
                            <option value="<%= id %>"><%= label %></option>
                        <% }) %>
                    </select>
                </div>
                <%- include('../partials/card-button-container.ejs', {label: 'Valider', showGoBackButton: true}) %>
            </form>
        </div>
    </div>
    <div class="fr-card">
        <div class="fr-card__body">
            <div class="fr-card__content">
                <div>
                    <a class="fr-link fr-icon-question-line fr-link--icon-left" href="/users/no-sponsor-found/<%= organization_id %>">
                        Je ne connais aucune des personnes proposées
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="module" src="<%= js('searchable-select.js') %>"></script>
<link rel="stylesheet" href="<%= css('searchable-select.css') %>">
